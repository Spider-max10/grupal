// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model SeriesId {
  id              Int           @id @default(autoincrement())
  consumible      String        @unique
  tipo            String  
  conexion        String
  modelo          Modelo        @relation(fields: [modeloId], references: [id])
  modeloId        Int
  asistencia      Asistencia[]

}

model ClienteId {
  id              Int           @id @default(autoincrement())
  name            String        @unique
  email           String
  asistencia      Asistencia[]
}

model Asistencia {
  id              Int           @id @default(autoincrement())
  instancia       String?
  servicio        String
  atencion        String
  published       Boolean       @default(false)
  series          SeriesId      @relation(fields: [seriesId], references: [id])
  seriesId        Int
  asistentes      AsistenteId   @relation(fields: [asistenteId], references: [id])
  asistenteId     Int
  clientes        ClienteId     @relation(fields: [clienteId], references: [id])
  clienteId       Int
}

model AsistenteId {
  id              Int           @id @default(autoincrement())
  caracteristicas String
  descripcion     String
  soporte         String
  asistencia      Asistencia[]
  areas           AreaId        @relation(fields: [areaId], references: [id])
  areaId          Int 

}

model Modelo {
  id              Int           @id @default(autoincrement())
  tipo            String  
  modelo          String
  seriales        SeriesId[]
}

model AreaId {
  id              Int           @id @default(autoincrement())
  narea           Int
  asistente       AsistenteId[]
}